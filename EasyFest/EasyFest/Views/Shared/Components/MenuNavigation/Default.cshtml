@model EasyFest.Models.User

@{ 
    bool hasModel = !string.IsNullOrEmpty(Model.Username);
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EasyFest</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item navBarAction">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item navBarAction">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Festival" asp-action="FestivalMap">Festival maps</a>
                </li>
                @if (!hasModel)
                {
                    TempData.Remove("loggedInUser");
                    TempData.Add("loggedInUser", false);
                    TempData.Remove("IsAdmin");
                    TempData.Add("IsAdmin", false);
                    <li class="nav-item navBarAction">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item navBarAction">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                    </li>
                }
                else
                {
                    TempData.Remove("loggedInUser");
                    TempData.Add("loggedInUser", true);
                    @Html.Hidden("LoggedUserId", Model.Id);
                    @Html.Hidden("LoggedUsername", Model.Username);
                    <li class="nav-item navBarAction">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                    </li>
                    <li class="nav-item navBarAction">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="MyProfile" asp-route-userId="@Model.Id"><div style="font-weight: 600;"><i class="glyphicon glyphicon-user"></i> @Model.Username</div></a>
                    </li>
                    if (Model.IsAdmin)
                    {
                        TempData.Remove("IsAdmin");
                        TempData.Add("IsAdmin", true);
                        @*<li class="nav-item navBarAction">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Festival" asp-action="NewFestival"><div><i class="glyphicon glyphicon-plus"></i> Novi festival</div></a>
                        </li>*@

                    }
                    else
                    {
                        TempData.Remove("IsAdmin");
                        TempData.Add("IsAdmin", false);
                    }
                }
            </ul>
        </div>
    </div>
</nav>