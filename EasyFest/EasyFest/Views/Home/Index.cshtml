@model ResponseData<FestivalList>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    
    @foreach(var data in Model.Data.Festivals)
    {
        <a href="@Url.Action("FestivalDetails", "Festival", new { festivalId = data.Id })">
            <div>
                <h2>@data.Name</h2>
                <p>Starts in: @data.Day - @data.Month</p>
                @if (data.Rate > 0)
                {
                    <p>Rate: @data.Rate</p>
                }
                else
                {
                    <p>Not yet rated.</p>
                }
            </div>
        </a>
    }

    <div>
        @Html.ActionLink("Login", "Login", "User")
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Home.js"></script>