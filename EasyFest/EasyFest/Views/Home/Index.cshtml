@model ResponseData<FestivalList>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!-- Page Heading -->
    <h1 class="my-4">
        Find the best festival
        <small>it's easy!</small>
    </h1>

    <div class="row">
        @foreach (var data in Model.Data.Festivals)
        {
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    @if (string.IsNullOrEmpty(data.ImageName))
                    {
                        <a href="#"><img class="card-img-top" src="https://via.placeholder.com/700x400" alt=""></a>
                    }
                    else
                    {
                        <a href="@Url.Action("FestivalDetails", "Festival", new { festivalId = data.Id })"><img class="card-img-top" src='@Url.Action("Image", "Home", new { imageName = data.ImageName})' alt=""></a>
                    }
                    <div class="card-body festInfoContainer">
                        <div style="width: 100%;">
                            <h4 class="card-title" style="float:left; width:90%;">
                                <a href="#">@data.Name</a>
                            </h4>
                            <div style="float:left;">
                                <i class="glyphicon glyphicon-star"><span>@data.Rate</span></i>
                                <i class="glyphicon glyphicon-comment"><span>@data.NumberOfComments</span></i>
                            </div>
                        </div>
                        <div style="float:left;">
                            <p class="card-text">
                                @data.Description
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
